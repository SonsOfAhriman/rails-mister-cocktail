<div id="showlogo" style="background-image: linear-gradient(-225deg, rgba(0, 0, 0, 0.3) 0%, rgba(83, 68, 63,0.1) 50%), url(<%= cloudinary_url(@cocktail.photo.key) %>);">

</div>

<div class="container">
  <h1> Cocktail: <%= @cocktail.name %> </h1>
  <ul>
    <% @cocktail.doses.each do |dose|%>
    <li style="list-style-type: none">
      <div class="d-flex">
        <i class="fas fa-glass-martini"></i>
        <p> <%= dose.ingredient.name %>: <%= dose.description %>  </p>
      </div>
      <p> <%= link_to "Delete this dose", dose_path(dose), data: { method: :delete, confirm: "Are you sure?" } %></p>
    </li>
    <% end %>
  </ul>
  <hr>
  <p> <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %></p>

</div>


