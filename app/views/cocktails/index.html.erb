<div id="logo">
  <div class="centered">
    <h1><strong>Welcome to Ryan's Cocktail Bar</strong></h1>
  </div>
</div>

<div class="container">
  <div class="title">
    <h2>All your Cocktails</h2>
  </div>


  <div class="card-group">

    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="card m-2">
            <img class="card-img-top" src="<%= cloudinary_url(cocktail.photo.key)%>">
            <div class="card-body">
              <h5 class="card-title"><%= link_to(cocktail.name, cocktail_path(cocktail)) %> </h5>
            </div>
          </div>
        </div>
        <% end %>
    </div>
  </div>

</div>
